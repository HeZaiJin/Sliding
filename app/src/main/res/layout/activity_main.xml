<?xml version="1.0" encoding="utf-8"?>
<com.haozhang.sliding.SlidingLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_sliding"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <Button
                android:id="@+id/sliding"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="SlidingLayout"
                android:textSize="24sp" />

            <Button
                android:id="@+id/sliding_nested"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="SlidingNestedLayout"
                android:textSize="24sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="Text 3"
                android:textSize="24sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="Text 4"
                android:textSize="24sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="Text 5"
                android:textSize="24sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="Text 6"
                android:textSize="24sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="Text 7"
                android:textSize="24sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="Text 8"
                android:textSize="24sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="Text 9"
                android:textSize="24sp" />
        </LinearLayout>
    </ScrollView>
</com.haozhang.sliding.SlidingLayout>
